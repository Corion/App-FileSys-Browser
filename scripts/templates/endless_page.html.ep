<title>Offset <%= $offset %></title>
% for ($offset .. $offset+$limit-1) {
<div class="album" id="album-<%= $_ %>">
<%= $_ %>
</div>
<hr />
% }
<!-- turn last element into infinite scroll, or just append one?! -->
 <a href="/endless/page?offset=<%= $offset+$limit %>"
    hx-trigger="revealed"
    hx-get="/endless/page?offset=<%= $offset+$limit %>"
    hx-target="this"
    hx-swap="outerHTML"
>
    More
</a>

